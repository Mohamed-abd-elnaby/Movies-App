<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="movies.app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:name=".Application.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activites.Images"/>
        <activity android:name=".Activites.DetailsActivity"
            android:theme="@style/AppTheme.NoActionBar"

            >

        </activity>
        <activity android:name=".Activites.VideoPlayer"/>
        <activity android:name=".Activites.Reviewers"/>
        <activity android:name=".Activites.Setting"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".Activites.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboardHidden|screenSize"
            >

            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        </activity>
    </application>

</manifest>